{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "飞鱼",
    "version": "1.0.0"
  },
  "build": {
    "beforeDevCommand": "cd ../feiyu && yarn desktop && yarn dev",
    "beforeBuildCommand": "cd ../feiyu && yarn desktop && yarn build",
    "devPath": "http://localhost:3000",
    "distDir": "../feiyu/dist"
  },
  "tauri": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "width": 800,
        "resizable": true,
        "title": "飞鱼",
        "visible": true,
        "center": true,
        "label": "main"
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "xbox.work.feiyu",
      "copyright": "GPL-3.0-only",
      "shortDescription": "一个漂亮得不像实力派的在线视频播放器 ✨",
      "longDescription": "让每个人都能通过电影的力量，获得对生活的新体验和新认知，怀着永不熄灭的热忱，勇敢地去追求、去探索、去发现生命的意义和价值。",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "deb": {
        "depends": []
      },
      "macOS": {
        "entitlements": null,
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "**",
          "windows": ["main"],
          "enableTauriAPI": true
        },
        {
          "domain": "*",
          "windows": ["main"],
          "enableTauriAPI": true
        }
      ]
    },
    "allowlist": {
      "process": {
        "all": true
      },
      "os": {
        "all": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://**", "http://*", "https://**", "https://*"]
      }
    }
  }
}
