{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
  },
  "include": ["./src",  "api/proxy.ts"],
  "exclude": ["node_modules"]
}
