{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src", "test/index.ts"],
  "exclude": ["node_modules"]
}
